{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PLang",
  "scopeName": "source.plang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.plang",
          "begin": "//",
          "end": "$",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.plang"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.plang",
          "match": "\\b(if|else|while|show|clear|help|exit|take)\\b"
        },
        {
          "name": "keyword.operator.assignment.plang",
          "match": "\\b(is)\\b"
        },
        {
          "name": "constant.language.boolean.plang",
          "match": "\\b(yes|no|true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.plang",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.comparison.plang",
          "match": "(==|!=|<=|>=|<|>|=)"
        },
        {
          "name": "keyword.operator.logical.plang",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.increment.plang",
          "match": "(\\+\\+|--)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.plang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.plang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.plang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.plang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.plang",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.float.plang",
          "match": "\\b\\d+\\.\\d+\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.name.plang",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
