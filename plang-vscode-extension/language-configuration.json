{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["(", ")"],
    ["{", "}"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["{", "}"],
    ["[", "]"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["{", "}"],
    ["[", "]"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
  "indentationRules": {
    "increaseIndentPattern": "^.*(if|while|until|else).*$",
    "decreaseIndentPattern": "^\\s*(else|end).*$"
  }
}
